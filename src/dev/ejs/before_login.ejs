<!DOCTYPE html>
<%var pageData = {
    id:'index',
    title:'パーツ',
    description:'',
    keywords:''
};%>
<%- include('./Layout/_head', {data:pageData}) %>

<body>
    <!-- ////////// PageContents ////////// -->
    <div class="container">
        <div class="spinner"></div>
    </div>

    <div class="container">
        <div class="card">
            <h1 class="title-logo"><img src="<%= config.root %>img/logo.svg" alt="givelog plus"></h1>
            <div class="user center">
                <div class="form-group email">
                    <span>メールアドレス</span>
                    <input type="email" name="email" class="form-control form-control-user" placeholder="メールアドレス" id="email">
                </div>
                <div class="form-group password">
                    <span>パスワード</span>
                    <input type="password" name="password" class="form-control form-control-user mb-4" placeholder="パスワード" id="password">
                </div>
                <a href="<%= config.path %>forget-password" class="link-text small bold forget">パスワードを忘れた方はこちら</a>
                <button class="btn btn-primary btn-user btn-block" id="login" type="submit">ログイン</button>
            </div>
            <hr class="dot_line">
            <a href="#" class="btn btn-info btn-user btn-block">アカウント新規作成</a>
        </div>
    </div>

    <div class="container">
        <div class="card white">
            <h1>フォーム</h1>
            <p class="text-small">すべて入力して新規作成ボタンを押してください。すぐに利用開始できます。</p>
            <div class="user center">
                <div class="form-group email">
                    <span>メールアドレス</span>
                    <input type="email" name="email" class="form-control form-control-user" placeholder="メールアドレス" id="email">
                </div>
                <div class="form-group password">
                    <span>パスワード</span>
                    <input type="password" name="password" class="form-control form-control-user mb-4" placeholder="パスワード" id="password">
                </div>
                <button class="btn btn-primary btn-user btn-block" id="login" type="submit">新規作成</button>
            </div>
            <hr class="dot_line">
            <a href="<%= config.path %>" class="link-text bold fas fa-angle-left back">もどる</a>

        </div>

    </div>

    <!-- ////////// END PageContents ////////// -->
    <%- include('./Layout/_script',{data:pageData});%>
</body>

</html>